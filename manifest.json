{
   "manifest_version": 2,

   "name": "ScrollBlack",
   "description": "Custom flat black scrollbar",
   "version": "1.2",

   "icons": {
      "128": "img/128.png"
   },

   "content_scripts": [{
      "css": ["css/scrollbar.css"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle"
   }]
}